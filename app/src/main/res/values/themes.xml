<resources>
    <!-- Base application theme. -->
    <style name="Theme.SuitmediaInternTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText" parent="TextView.Header.2">
        <item name="android:background">@drawable/edt_primary</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Header.1">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.Header.2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Hint">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0.5dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="navigationIconTint">#FF554AF0</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/black</item>
        <item name="titleTextAppearance">@style/ToolbarTitleAppearance</item>
    </style>

    <style name="ToolbarTitleAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>